{% extends "layout.html.twig" %}
{% block contenu %}
	<div class="col-md-6 mb-2"></div>
	<table class="table table-striped">
		<thead class="thead-inverse">
		<tr><th>Id produit</th><th>Nom produit</th><th>Prix</th><th>Quantite</th><th>Heure de début de vente</th><th>Heure de fin de vente</th>
            {% if   app.session.get('droits') is defined and  app.session.get('droits') == 'ROLE_VENDEUR' %}
				<th>opération</th>
            {% endif %}
		</tr>
		</thead>
		<tbody>
        {% for vendeur in vendeurs if vendeurs is not empty %}

			<tr>
					<td>{{vendeur.id_produits}}</td><td>{{vendeur.libelle_produits}}</td><td>{{vendeur.prix_produits}}</td><td>{{vendeur.quantite_produits}}</td><td>
                    {{vendeur.heure_debut_vente}}</td><td>{{vendeur.heure_fin_vente}}</td>
                {% if   app.session.get('droits') is defined and  app.session.get('droits') == 'ROLE_VENDEUR' %}
					<td>

						<a href="{{ path('vendeur.delete', {id: vendeur.id_utilisateur}) }}">supprimer</a>
					</td>
                {% endif %}
			</tr>
        {% endfor %}
		</tbody>
	</table>
	</div>
{% endblock %}

